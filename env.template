# Environment Variables Template
# Copy this file to .env and fill in your actual values

# API Keys
POLYGON_API_KEY=your_polygon_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/sentiment_db
REDIS_URL=redis://localhost:6379/0

# TimescaleDB (if using cloud service)
TIMESCALE_CONNECTION_STRING=postgresql://username:password@host:port/database

# Application Settings
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# FastAPI Settings
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Security
BCRYPT_ROUNDS=12
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# External Services
SENTRY_DSN=your_sentry_dsn_here

# Development
DEBUG=true
LOG_LEVEL=INFO

# Production (set to false for production)
DEVELOPMENT=true

# WebSocket Settings
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_MAX_CONNECTIONS=100

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# MCP Configuration
MCP_SERVER_PORT=8080
MCP_LOG_LEVEL=INFO

# Trading Hours (Eastern Time)
MARKET_OPEN_HOUR=9
MARKET_OPEN_MINUTE=30
MARKET_CLOSE_HOUR=16
MARKET_CLOSE_MINUTE=0

# Data Refresh Intervals (in seconds)
SECTOR_REFRESH_INTERVAL=900  # 15 minutes
STOCK_REFRESH_INTERVAL=300   # 5 minutes
NEWS_REFRESH_INTERVAL=600    # 10 minutes

# Analysis Thresholds
EXTREME_GAP_THRESHOLD=0.30   # 30%
LARGE_GAP_THRESHOLD=0.15     # 15%
SHORTABILITY_HIGH_RISK=7     # 7+ points
SHORTABILITY_MEDIUM_RISK=4   # 4-6 points 